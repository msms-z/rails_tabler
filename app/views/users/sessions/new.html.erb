
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'card card-md' }) do |f| %>
  <div class="card-body">
    <h2 class="card-title text-center mb-4">Login to your account</h2>
    <div class="mb-3">
      <%= f.label :login, class: 'form-label' %>
      <%= f.email_field :login, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="mb-2">
      <%= f.label :password, class: 'form-label' do %>
        Password
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <span class="form-label-description">
            <%# <a href="./forgot-password.html">I forgot password</a> %>
            <%= link_to "I forgot password", new_password_path(resource_name) %>
          </span>
        <% end %>
      <% end %>
      <%= render "users/shared/password_input", form: f, password_field: :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-2">
        <%= f.label :remember_me, class: 'form-check' do %>
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <span class="form-check-label">Remember me on this device</span>
        <% end %>
      </div>
    <% end %>

    <div class="form-footer">
      <%= f.submit "Log in", class: 'btn btn-primary w-100' %>
    </div>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="text-center text-muted mt-3">
    Don't have account yet? <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  </div>
<% end %>


